#!/bin/bash

export THISDIRFROMHOSTROOT=/HostRoot`pwd`
echo $THISDIRFROMHOSTROOT

export args="$@"
ssh -p $BLOCKWORKS_BUILDVM_SSH_PORT -i $BLOCKWORKS_BUILD_BASE/Common/PrivateKey $BLOCKWORKS_BUILDVM_USERHOST "export BLOCKWORKS_PLATFORM_BASE=/HostRoot$BLOCKWORKS_PLATFORM_BASE && cd $THISDIRFROMHOSTROOT && make $args"

